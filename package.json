{
  "name": "inkdrop-model",
  "version": "2.4.0",
  "description": "Data model for Inkdrop",
  "main": "lib/index.js",
  "scripts": {
    "build": "npm-run-all build:* doc",
    "build:lib": "babel src/ -d lib && flow-copy-source src lib",
    "build:schema": "yaml2json -p -s yaml-schema/ && mkdir -p json-schema && mv yaml-schema/*.json json-schema/ && ./compile_schema.sh",
    "lint": "eslint src test",
    "flow": "flow check",
    "test": "ava",
    "doc": "bundle exec prmd combine --meta docs/meta.json json-schema/ > schema.json && bundle exec prmd doc schema.json > docs/schema.md && rm schema.json",
    "prepublishOnly": "npm-run-all build:* lint flow test"
  },
  "author": "Takuya Matsuyama <t@inkdrop.app>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/inkdropapp/inkdrop-model.git"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-flow": "^7.0.0",
    "ajv": "^6.10.2",
    "ajv-cli": "^3.0.0",
    "ava": "^2.3.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.2.2",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-flowtype": "^4.2.0",
    "eslint-plugin-prettier": "^3.1.0",
    "flow-bin": "^0.106.2",
    "flow-copy-source": "^2.0.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "yamljs": "^0.3.0"
  },
  "dependencies": {},
  "ava": {
    "require": [
      "@babel/polyfill"
    ],
    "babel": {
      "testOptions": {
        "presets": [
          "@ava/stage-4",
          "@babel/preset-flow"
        ]
      }
    }
  },
  "keywords": [
    "json-schema",
    "flowtype"
  ],
  "files": [
    "lib",
    "json-schema",
    "validators"
  ]
}
