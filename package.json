{
  "name": "inkdrop-model",
  "version": "2.10.0",
  "description": "Data model for Inkdrop",
  "scripts": {
    "build": "npm-run-all build:schema build:lib doc",
    "build:lib": "rollup -c --bundleConfigAsCjs && mv lib/src/* lib/ && rm -r lib/src",
    "build:schema": "./compile_schema.sh",
    "lint": "eslint src __tests__",
    "test": "jest --config jest.config.js",
    "doc": "./generate_doc.sh",
    "prepublishOnly": "npm-run-all build:* lint test"
  },
  "author": "Takuya Matsuyama <t@inkdrop.app>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/inkdropapp/inkdrop-model.git"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/jest": "^30.0.0",
    "ajv": "^8.17.1",
    "ajv-cli": "^5.0.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.7.4",
    "rollup": "^4.53.3",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "yamljs": "^0.3.0"
  },
  "types": "lib/index.d.ts",
  "main": "lib/index.js",
  "unpkg": "lib/index.umd.js",
  "module": "lib/index.esm.js",
  "keywords": [
    "json-schema"
  ],
  "files": [
    "lib",
    "json-schema",
    "validators"
  ]
}
