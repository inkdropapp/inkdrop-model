{
  "name": "inkdrop-model",
  "version": "2.8.0",
  "description": "Data model for Inkdrop",
  "scripts": {
    "build": "npm-run-all build:schema build:lib doc",
    "build:lib": "rollup -c --bundleConfigAsCjs && mv lib/src/* lib/ && rm -r lib/src",
    "build:schema": "./compile_schema.sh",
    "lint": "eslint src __tests__",
    "test": "jest --config jest.config.js",
    "doc": "./generate_doc.sh",
    "prepublishOnly": "npm-run-all build:* lint test"
  },
  "author": "Takuya Matsuyama <t@inkdrop.app>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/inkdropapp/inkdrop-model.git"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-terser": "^0.4.3",
    "@types/jest": "^29.5.2",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "ajv": "^8.17.1",
    "ajv-cli": "^5.0.0",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "jest": "^29.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "rollup": "^3.23.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.7.3",
    "yamljs": "^0.3.0"
  },
  "types": "lib/index.d.ts",
  "main": "lib/index.js",
  "unpkg": "lib/index.umd.js",
  "module": "lib/index.esm.js",
  "keywords": [
    "json-schema"
  ],
  "files": [
    "lib",
    "json-schema",
    "validators"
  ]
}
