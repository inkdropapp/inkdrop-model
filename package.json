{
  "name": "inkdrop-model",
  "version": "2.4.2",
  "description": "Data model for Inkdrop",
  "main": "lib/index.js",
  "scripts": {
    "build": "npm-run-all build:* doc",
    "build:lib": "babel src/ -d lib && flow-copy-source src lib",
    "build:schema": "yaml2json -p -s yaml-schema/ && mkdir -p json-schema && mv yaml-schema/*.json json-schema/ && ./compile_schema.sh",
    "lint": "eslint src test",
    "flow": "flow check",
    "test": "ava",
    "doc": "bundle exec prmd combine --meta docs/meta.json json-schema/ > schema.json && bundle exec prmd doc schema.json > docs/schema.md && rm schema.json",
    "prepublishOnly": "npm-run-all build:* lint flow test"
  },
  "author": "Takuya Matsuyama <t@inkdrop.app>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/inkdropapp/inkdrop-model.git"
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-flow": "^7.8.3",
    "ajv": "^6.12.0",
    "ajv-cli": "^3.1.0",
    "ava": "^3.5.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-flowtype": "^4.6.0",
    "eslint-plugin-prettier": "^3.1.2",
    "flow-bin": "^0.120.1",
    "flow-copy-source": "^2.0.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "yamljs": "^0.3.0"
  },
  "dependencies": {},
  "ava": {
    "babel": true
  },
  "keywords": [
    "json-schema",
    "flowtype"
  ],
  "files": [
    "lib",
    "json-schema",
    "validators"
  ]
}
