{
  "name": "inkdrop-model",
  "version": "2.7.0",
  "description": "Data model for Inkdrop",
  "scripts": {
    "build": "npm-run-all build:schema build:lib doc",
    "build:lib": "rollup -c && mv lib/src/* lib/ && rm -r lib/src",
    "build:schema": "./compile_schema.sh",
    "lint": "eslint src __tests__",
    "test": "jest --config jest.config.js",
    "doc": "./generate_doc.sh",
    "prepublishOnly": "npm-run-all build:* lint test"
  },
  "author": "Takuya Matsuyama <t@inkdrop.app>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/inkdropapp/inkdrop-model.git"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.2.1",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "ajv": "^8.1.0",
    "ajv-cli": "^5.0.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^27.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "rollup": "^2.70.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.2",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3",
    "yamljs": "^0.3.0"
  },
  "types": "lib/index.d.ts",
  "main": "lib/index.umd.js",
  "unpkg": "lib/index.umd.js",
  "module": "lib/index.esm.js",
  "keywords": [
    "json-schema"
  ],
  "files": [
    "lib",
    "json-schema",
    "validators"
  ]
}
