{
  "compilerOptions": {
    "allowJs": true,
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "declarationDir": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": false
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "lib"]
}
